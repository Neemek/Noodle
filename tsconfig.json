{
  "include": ["src/**/*", "tests/index.test.ts"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "module": "ES2015",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "declaration": true
  }
}
